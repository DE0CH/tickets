rules_version='2'

service cloud.firestore {
  match /databases/{database}/documents {
    match /users/{userId} {
      allow read: if request.auth != null
        && (
          request.auth.uid == userId
          || get(/databases/$(database)/documents/users/$(request.auth.uid))
            .data.oxford_email_verified == true
        );
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /events/{eventId} {
      allow read: if true;
      allow write: if false;
    }

    match /ask/{askId} {
      allow read: if true;
      allow create: if request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid))
          .data.oxford_email_verified == true;
      allow update, delete: if request.auth != null
        && request.auth.uid == resource.data.user_id;
    }

    match /bid/{bidId} {
      allow read: if true;
      allow create: if request.auth != null
        && get(/databases/$(database)/documents/users/$(request.auth.uid))
          .data.oxford_email_verified == true;
      allow update, delete: if request.auth != null
        && request.auth.uid == resource.data.user_id;
    }

    match /ask_history/{historyId} {
      allow read: if true;
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.user_id
        && get(/databases/$(database)/documents/users/$(request.auth.uid))
          .data.oxford_email_verified == true
        && get(/databases/$(database)/documents/ask/$(request.resource.data.ask_id))
          .data.user_id == request.auth.uid;
      allow delete: if request.auth != null
        && request.auth.uid == resource.data.user_id;
    }

    match /bid_history/{historyId} {
      allow read: if true;
      allow create: if request.auth != null
        && request.auth.uid == request.resource.data.user_id
        && get(/databases/$(database)/documents/users/$(request.auth.uid))
          .data.oxford_email_verified == true
        && get(/databases/$(database)/documents/bid/$(request.resource.data.bid_id))
          .data.user_id == request.auth.uid;
      allow delete: if request.auth != null
        && request.auth.uid == resource.data.user_id;
    }

    // Block all other read and write
    match /{path=**} {
      allow read, write: if false;
    }
  }
}
